
LoadModule ssl_module modules/mod_ssl.so

Listen 443 

<VirtualHost <%=http_domain_name%>:443>
DocumentRoot /var/www/html
ServerName <%=http_domain_name%>
SSLEngine on
<% if httpd_sscert %>
SSLCertificateFile /etc/ssl/certs/self-signed.crt
SSLCertificateKeyFile /etc/ssl/keys/server.key
<% else %>
SSLCertificateFile /etc/ssl/certs/<%=http_domain_name%>.crt
SSLCertificateKeyFile /etc/ssl/keys/server.key
SSLCertificateChainFile /etc/ssl/certs/<%=http_ca_name%>.crt
<% end %>
</VirtualHost> 

