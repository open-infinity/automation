hibernate.cache.provider_class=com.liferay.portal.dao.orm.hibernate.EhCacheProvider
net.sf.ehcache.configurationResourceName=/ehcache/hibernate-clustered.xml
ehcache.multi.vm.config.location=/ehcache/liferay-multi-vm-clustered.xml


cluster.link.enabled=<%= enable_cluster %>
cluster.link.autodetect.address=<%= @portal_db_address %>:3306
lucene.replicate.write=true

multicast.group.address["cluster-link-control"]=<%= @portal_multicast_address %>
multicast.group.port["cluster-link-control"]=54221
#
# See the properties "cluster.link.channel.properties.transport.0" and
# "cluster.link.channel.system.properties".
#
multicast.group.address["cluster-link-udp"]=<%= @portal_multicast_address %>
multicast.group.port["cluster-link-udp"]=54222
#
# See the property "cluster.link.channel.system.properties".
#
multicast.group.address["cluster-link-mping"]=<%= @portal_multicast_address %>
multicast.group.port["cluster-link-mping"]=54223
#
# See the properties "net.sf.ehcache.configurationResourceName" and
# "net.sf.ehcache.configurationResourceName.peerProviderProperties".
#
multicast.group.address["hibernate"]=<%= @portal_multicast_address %>
multicast.group.port["hibernate"]=54224
#
# See the properties "ehcache.multi.vm.config.location" and
# "ehcache.multi.vm.config.location.peerProviderProperties".
#
multicast.group.address["multi-vm"]=<%= @portal_multicast_address %>
multicast.group.port["multi-vm"]=54225

minifier.enabled=<%= enable_minifier %>
