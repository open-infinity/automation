systemLog:
    destination: file
    path: "/opt/openinfinity/log/mongodb/mongocfg.log"
    quiet: true
    logAppend: true

storage:
    dbPath: "/opt/openinfinity/data/mongocfg"
    journal:
        enabled: true
    smallFiles: <%= _mongo_storage_smallFiles %>

security:
    authorization: <%= _mongo_security_authorization %>

processManagement:
    fork: true
    pidFilePath: /var/run/mongodb/mongocfg.pid

net:
    port: <%= _mongocfg_port %>
#    bindIp: 0.0.0.0
    
<% if mongo_cluster_type == 'sharded' then %>
sharding:
    clusterRole: configsvr
<% end %>

