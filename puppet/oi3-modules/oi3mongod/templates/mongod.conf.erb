systemLog:
    destination: file
    path: "/opt/openinfinity/log/mongodb/mongod.log"
    quiet: true
    logAppend: true

storage:
    dbPath: "/opt/openinfinity/data/mongod"
    journal:
        enabled: true
    smallFiles: <%= mongo_storage_smallFiles %>

security:
    authorization: <%= mongo_security_authorization %>

processManagement:
    fork: true
    pidFilePath: /var/run/mongodb/mongod.pid

net:
#    bindIp: 0.0.0.0
    port: <%= mongod_port %>
    
replication:
<% if ['replicaset', 'sharded'].include? mongo_cluster_type then %>    
    replSetName: <%= mongo_replicaset_name %>
    <% if mongo_replicaset_oplogSizeMB != "default" then %>
    oplogSizeMB: <%= mongo_replicaset_oplogSizeMB %>
    <% end %>
<% end %>

<% if mongo_cluster_type == 'sharded' then %>
sharding:
    clusterRole: shardsvr
<% end %>

